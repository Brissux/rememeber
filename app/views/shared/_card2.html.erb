<div class="card2" data-controller="texteditor">
  <div class="d-flex flex-column">
    <div class="card-content" id="canvas-container">
      <% if meme.video_url.present? %>
        <video width="360" controls>
          <source src="<%= meme.video_url %>" type="video/mp4">
          Your browser does not support the video tag.
        </video>
      <% elsif meme.file.attached? %>
        <%= cl_image_tag meme.file.key, alt: meme.title, width: 360, height: 360, data: { texteditor_target: "image"}, class: "d-none", crossorigin: "anonymous"  %>
        <canvas id="imageCanvas" width="360" height="360" data-texteditor-target="canvas">
        </canvas>
      <% end %>
    </div>
    <div class="card-tab2">
      <div class="like-icon" data-controller="like-icon" data-like-icon-target="likeIcon,likeCount" data-like-state="<%= @like ? 'liked' : 'unliked' %>">
        <% if user_signed_in? %>
          <% if current_user.liked_memes.include?(@meme) %>
            <%= form_with(url: meme_like_path(@meme), method: :delete, local: true) do |form| %>
              <%= form.submit "", class: "d-inline-block" %>
            <% end %>
          <% else %>
            <%= form_with(url: meme_likes_path(@meme), method: :post, local: true) do |form| %>
              <%= form.submit "", class: "d-inline-block" %>
            <% end %>
          <% end %>
        <% end %>
        <%= image_tag @like ? 'unlike_icon.svg' : 'like_icon.svg', height: '33px' %>
        <span id="like-count"><%= @meme.likes.count %></span>
      </div>
      <div class="share-icon">
        <a href="#" data-bs-toggle="modal" data-bs-target="#shareModal">
          <%= image_tag 'share_icon.svg' %>
        </a>
      </div>
    </div>
    <button id="editTextButton" data-action="click->texteditor#addText">Edit Text</button>
    <button id="saveButton" data-action="click->texteditor#save">Sauvegarder</button>
  </div>
</div>

<div class="modal fade" id="shareModal" tabindex="-1" aria-labelledby="shareModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="shareModalLabel">Partager sur les réseaux</h5>
        <button type="button" class="btn btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <div class="icone-media d-flex justify-content-evenly align-items-center">
          <%= render "shared/button_like", meme: @meme %>
        </div>
        <div class="d-flex align-items-center pt-4" data-controller="copyurl" data-action="click->copyurl#copyurl">
          <button type="button" class="btn btn-link" id="popover-link" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="bottom" data-bs-content="Copié !" data-bs-trigger="click">
            <%= image_tag 'link.svg' %>
          </button>
          <input type="text" class="form-control ms-2" id="page-url" value="<%= meme_url(meme) %>" data-copyurl-target="input" readonly>
        </div>
      </div>
    </div>
  </div>
</div>
