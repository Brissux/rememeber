<h1>Ma galerie</h1>
<%= render partial: "favorites/menu_favorites", locals: { search: params[:search] } %>
<% if @favorites.any? %>
  <div class="container-fluid">
    <div class="row">
      <div class="col-6">
        <% @favorites.each_with_index do |favorite, index| %>
          <% if index.even? %>
            <%= render partial: "shared/card1", locals: { meme: favorite.meme } %>
          <% end %>
        <% end %>
      </div>
      <div class="col-6">
        <% @favorites.each_with_index do |favorite, index| %>
          <% if index.odd? %>
            <%= render partial: "shared/card1", locals: { meme: favorite.meme } %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% else %>
  <% if params[:search].present? %>
    <p>Aucun r√©sultat pour "<%= params[:search] %>".</p>
  <% else %>
    <p>Vous n'avez aucun favori pour le moment.</p>
  <% end %>
<% end %>
