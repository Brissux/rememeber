<h1>Créer un nouveau mème</h1>

<%= simple_form_for(@meme, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.label :title, 'Titre du mème', class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :tag_names, 'Tags (séparés par des virgules)', class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :tag_names, class: 'form-control', value: @meme.tags.pluck(:name).join(', ') %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :image, 'Image du mème', class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.file_field :image, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :public, 'Rendre public', class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.check_box :public %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.button :submit, class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
