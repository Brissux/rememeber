<%= form_with(model: @meme, local: true) do |form| %>
  <div class="field">
    <%= form.label :text, class: 'form-label' %> <!-- Applique le style Bootstrap aux labels -->
    <!-- RÃ©duction de la hauteur et application du style Bootstrap -->
    <textarea name="meme[text]" rows="2" class="form-control" data-controller="text-preview" data-text-preview-target="textInput" data-action="input->text-preview#updatePreview"></textarea>
  </div>
  <%= form.submit "Add Text", class: 'btn btn-primary' %> <!-- Applique le style Bootstrap au bouton -->
<% end %>

<%= render "form", meme: @meme %>

<div class="d-flex justify-content-evenly flex-wrap row-gap-2">
  <%= render partial: "shared/card2", locals: { meme: @meme } %>
</div>

<% if @tags.any? %>
  <div class="d-flex flex-wrap mb-4 gap-2">
    <% @tags.each do |tag| %>
      <div>
        <%= link_to tag.name, root_path(search: tag.name), class: "btn button-tag", style: "text-decoration: none; color: black;" %>
      </div>
    <% end %>
  </div>
<% end %>

<% if @meme.user == current_user %>

<div class="text-center">
  <%= link_to "SUPPRIMER", meme_path(@meme), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn button-delete" %>
   </div>
<% else %>
  <% if current_user && current_user.favorites.find_by(meme: @meme) %>
    <div class="text-center">
      <%= link_to "RETIRER DE MA GALERIE", meme_favorite_path(@meme, current_user.favorites.find_by(meme: @meme)), data: {turbo_method: "delete"}, class: "btn button-unvalidate" %>
    </div>
  <% else %>
    <%= render "favorite", meme: @meme, favorite: @favorite %>
  <% end %>
<% end %>
